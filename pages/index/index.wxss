/**index.wxss**/
@import "/styles/iconfont.wxss";
page{
  background: url(https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fimg.pconline.com.cn%2Fimages%2Fupload%2Fupc%2Ftx%2Fphotoblog%2F1407%2F28%2Fc5%2F36799081_36799081_1406547136922.jpg&refer=http%3A%2F%2Fimg.pconline.com.cn&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=auto?sec=1652420190&t=bca944bc68460e71dd65921cacea6d08) no-repeat;
  background-position-x: 80%;
  background-size: 240% 100%;
}
.bodys{
  width: 100vw;
  height: 100vh;
}
.flexBox{
  width: 90%;
  margin: 10rpx 5%;
  display: flex;
  align-items: center;
}
.header-search{
  position: fixed;
  top: 0;
  z-index: 99;
  padding: 10rpx 0;
  border-bottom: 2rpx solid #d3dfee;
}
.header-search .iconfont{
  flex: 1;
  color: #d3dfee;
  font-size: 38rpx;
  text-align: center;
}
.header-search .header-ipt{
  flex: 8;
  color: #fff;
}
.header-search .header-ipt .ipt-sty{
  color: #fff;
  font-size: 34rpx;
}

.user{
  margin: 112rpx 5% 22rpx;
}
.user-img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 26rpx;
}
.user-img image{
  width: 100%;
}
.user .user-name{
  font-size:32rpx;
  color: #fff;
}

.weather-info{
  height: 460rpx;
}
.weather-info .address{
  justify-content: space-between;
}
.address .address-name{
  display: flex;
  align-items: center;
  font-size: 52rpx;
  color: #fff;
}
.address .address-name .iconfont{
  font-size: 34rpx;
  margin-right: 32rpx;
}
.weather-time{
  color: #fff;
  font-size: 26rpx;
}
.weather-temperature{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.weather-temperature .temperature{
  line-height: 310rpx;
  font-size: 160rpx;
  color: #fff;
  position: relative;
}
.weather-temperature .temperature::after{
  content: 'â„ƒ';
  font-size: 46rpx; 
  position: absolute;
  top: -40rpx;
  right: -50rpx;
}
.situation{
  color: #fff;
  font-size: 32rpx;
  line-height: 40rpx;
}
.visibility{
  width: 120rpx;
  padding: 0rpx 10rpx;
  margin: 25rpx 0 15rpx;
  border-radius: 30rpx;
  line-height: 45rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background-color: rgba(255,255,255,0.2);
}

.table-info{
  margin: 30rpx 0;
  background-color: rgba(0,0,0,0.5);
}
.table-info .table-title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  border-bottom: 2rpx solid #999;
}
.sevenDay-weather .sevenDay-box{
  white-space:nowrap;
}
.sevenDay-list{
  display: inline-block;
  width: 200rpx;
  padding: 16rpx 0;
  text-align: center;
  color: #fff;
  line-height: 2;
  font-size: 28rpx;
}
.iconsvg{
  width: 30rpx;
  height: 30rpx;
  background-size: contain
}

.other-info{
  display: flex;
  justify-content: left;
  flex-wrap: wrap;
}


.hour-weather-box{
  height: 420rpx;
  white-space:nowrap;
}
.hour-weather-list{
  display: inline-block;
}
.hour-info .hour-weather{
  display: inline-block;
  width: 95%;
  border-radius: 10rpx;
  margin: 20rpx 2.5%;
  background-color: #7c7c7c;
}
.hour-time{
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}

.life-list{
  width: 94%;
  margin: 20rpx 3% 0;
  border-bottom: 1rpx solid #777;
  display: flex;
  align-items: center;
}
.life-img{
  flex: 2;
  height: 140rpx;
  padding: 10rpx;
  margin: 15rpx 0;
}
.life-img image{
  width: 100%;
}
.life-info{
  flex: 8;
  height: 160rpx;
  color: #fff;
  margin-left: 20rpx;
  line-height: 1.4;
}
.life-title{
  font-size: 36rpx;
}
.life-text{
  font-size: 26rpx;
}

.footer{
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
}